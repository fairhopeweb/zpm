#!/usr/bin/env zsh

local Plugin_name="$1"

declare -Ag plugin_types=(
  empty empty

  gh github
  github github

  gl gitlab
  gitlab gitlab

  bb bitbucket
  bitbucket bitbucket

  git git

  file file

  dir dir
  link dir

  omz omz

  omz-theme omz-theme

  omz-lib omz-lib

  remote remote
  gist gist
)

if [[ "$Plugin_name" == "@"* ]]; then
  if [[ "$Plugin_name" == '@zpm' ]]; then
    echo 'zpm'
    return 0
  fi

  if [[ "$Plugin_name" == '@omz' ]]; then
    echo 'omz-core'
    return 0
  fi

  for plugin_type_key plugin_type in ${(@kv)plugin_types}; do
    if [[ "$Plugin_name" == "@${plugin_type_key}/"* ]];then
      echo "$plugin_type"
      return 0
    fi
  done

  return -1
fi

if [[ "$Plugin_name" = *'/'* && "$Plugin_name" != *'/'*'/'* ]]; then
  echo 'github'
  return 0
fi

return -1
